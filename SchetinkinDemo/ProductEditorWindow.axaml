<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:CompileBindings="False"
        x:Class="SchetinkinDemo.ProductEditorWindow"
        Title="Редактор товара"
        Width="400" Height="500"
        WindowStartupLocation="CenterOwner">
  <StackPanel Spacing="10" Margin="20">
    <TextBlock Text="Name:"/>
    <TextBox Name="NameTextBox"/>
    
    <TextBlock Text="Articul (SKU):"/>
    <TextBox Name="SkuTextBox"/>
    
    <TextBlock Text="Price:"/>
    <TextBox Name="PriceTextBox"/>
    
    <TextBlock Text="Remaining stock:"/>
    <TextBox Name="StockTextBox"/>

   <TextBlock Text="Brand:"/>
    <ComboBox Name="BrandComboBox" DisplayMemberBinding="{Binding Name}" />

    <TextBlock Text="Category:"/>
    <ComboBox Name="CategoryComboBox" DisplayMemberBinding="{Binding Name}" />

    <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right" Margin="0,20,0,0">
      <Button Name="SaveButton" Content="Save" Click="SaveButton_Click"/>
      <Button Name="CancelButton" Content="Cancel" Click="CancelButton_Click"/>
    </StackPanel>
  </StackPanel>
</Window>
