<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SchetinkinDemo.OrderView"
        x:CompileBindings="False"
        Loaded="OrderView_Loaded">
  <DockPanel Margin="10">
    <TextBlock DockPanel.Dock="Top" Text="Order management" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
    
    <ListBox Name="OrdersListBox" ScrollViewer.HorizontalScrollBarVisibility="Disabled" DoubleTapped="OrdersListBox_DoubleTapped" >
     <ListBox.ItemTemplate>
    <DataTemplate>
        <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="5" Background="White">
            <DockPanel LastChildFill="True" MinWidth="700">

                <!-- Правая часть (мы знаем, что она работает, оставляем как есть) -->
                <StackPanel DockPanel.Dock="Right" Spacing="10" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                    <TextBlock FontSize="16" FontWeight="Bold" Text="{Binding TotalAmount, StringFormat='{}{0:c}'}" VerticalAlignment="Center" Foreground="Black"/>
                    <ComboBox SelectedItem="{Binding Status}" SelectionChanged="StatusComboBox_SelectionChanged" Width="150">
                        <ComboBoxItem Content="new"/>
                        <ComboBoxItem Content="processing"/>
                        <ComboBoxItem Content="shipped"/>
                        <ComboBoxItem Content="delivered"/>
                        <ComboBoxItem Content="cancelled"/>
                    </ComboBox>
                </StackPanel>

                <!-- Левая часть: УБИРАЕМ StringFormat -->
                <StackPanel Spacing="5" VerticalAlignment="Center">
                    <TextBlock FontWeight="Bold" Text="{Binding OrderNumber}" Foreground="Black" />
                    <TextBlock Text="{Binding CustomerName}" Foreground="Black" />
                    <!-- Для даты просто выводим как есть, без форматирования -->
                    <TextBlock Text="{Binding OrderDate}" Foreground="Black" />
                </StackPanel>

            </DockPanel>
        </Border>
    </DataTemplate>
</ListBox.ItemTemplate>
    </ListBox>
    
  </DockPanel>
</UserControl>
