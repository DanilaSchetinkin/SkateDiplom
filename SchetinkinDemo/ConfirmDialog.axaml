<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SchetinkinDemo.ConfirmDialog"
        Title="ConfirmDialog"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        x:CompileBindings="False">
  <StackPanel Spacing="15" Margin="20">
    <!-- Текст вопроса будет устанавливаться из кода -->
    <TextBlock Name="MessageTextBlock" Text="Вы уверены?" TextWrapping="Wrap"/>
    
    <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right">
      <!-- 
        IsDefault="True" - кнопка сработает по Enter
        IsCancel="True" - кнопка сработает по Escape 
      -->
      <Button Name="YesButton" Content="Yes" IsDefault="True" Click="YesButton_Click"/>
      <Button Name="NoButton" Content="No" IsCancel="True" Click="NoButton_Click"/>
    </StackPanel>
  </StackPanel>
</Window>
