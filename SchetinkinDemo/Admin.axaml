<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SchetinkinDemo.Admin"
        Title="Панель Администратора"
        Width="1000" Height="700"
        WindowStartupLocation="CenterScreen"
        Background="#808080">
    
    <Grid ColumnDefinitions="200, *"> <!-- Две колонки: 200px для навигации, остальное для контента -->

        <!-- 1. ПАНЕЛЬ НАВИГАЦИИ (слева) -->
        <Border Grid.Column="0"  BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
            <StackPanel Spacing="10" Margin="10">
                
                <!-- Панель пользователя -->
                <Border Padding="10"  CornerRadius="5">
                    <StackPanel Spacing="5">
                        <TextBlock Name="FioTextBlock" FontWeight="Bold" Text="Name Surname"/>
                        <TextBlock Name="RoleTextBlock" Foreground="Gray" Text="Role"/>
                        <Button Name="LogoutButton" Content="Exit" Click="LogoutButton_Click" HorizontalAlignment="Stretch" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Кнопки навигации -->
                <Button Name="ProductsButton" Content="Product" Click="ProductsButton_Click" HorizontalAlignment="Stretch"/>
                <Button Name="OrdersButton" Content="Order" Click="OrdersButton_Click" HorizontalAlignment="Stretch"/>
                
                <!-- Кнопка "Пользователи" будет видна только администратору -->
                <Button Name="UsersButton" Content="Users" Click="UsersButton_Click" HorizontalAlignment="Stretch"/>

            </StackPanel>
        </Border>

        <!-- 2. ОБЛАСТЬ КОНТЕНТА (справа) -->
        <!-- Это "экран", в котором мы будем показывать другие View (ProductsView, OrdersView и т.д.) -->
        <ContentControl Grid.Column="1" Name="MainContentControl" Margin="15"/>

    </Grid>
</Window>
