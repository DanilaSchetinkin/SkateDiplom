<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SchetinkinDemo.UsersView"
             Loaded="UsersView_Loaded"
             x:CompileBindings="False">

  <DockPanel Margin="10">
    <TextBlock DockPanel.Dock="Top" Text="User management" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
    
   <ListBox Name="UsersListBox" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
  <ListBox.ItemTemplate>
    <DataTemplate>
      <!-- Задаем белый фон для всей "карточки" -->
      <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="5" Background="White">
        <Grid ColumnDefinitions="*, Auto" MinWidth="700">
          
          <StackPanel Grid.Column="0" Spacing="5">
            <!-- Задаем черный цвет для текста -->
            <TextBlock FontWeight="Bold" Text="{Binding FullName}" Foreground="Black" />
            <TextBlock Text="{Binding Email}" Foreground="Black" /> 
          </StackPanel>

          <StackPanel Grid.Column="1" VerticalAlignment="Center">
            <ComboBox ItemsSource="{Binding AllRoles}"
          SelectedItem="{Binding UserRole, Mode=OneWay}"
          DisplayMemberBinding="{Binding Name}"
          SelectionChanged="RoleComboBox_SelectionChanged" 
          Width="150"/>
          </StackPanel>
          
        </Grid>
      </Border>
    </DataTemplate>
  </ListBox.ItemTemplate>
</ListBox>
    
  </DockPanel>
</UserControl>